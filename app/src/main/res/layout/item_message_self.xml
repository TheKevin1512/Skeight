<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="message"
            type="com.kevindom.skeight.model.Message"/>

        <variable
            name="showName"
            type="boolean"/>

        <variable
            name="hasPicture"
            type="boolean"/>

        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.Space
            android:id="@+id/spacing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/spacing_extra_small"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_small"
                android:gravity="end"
                android:text="@{message.name}"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold"
                android:visibility="@{showName ? View.VISIBLE : View.GONE}"
                tools:text="Kevin"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/bg_item_chat"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium"
                    android:text="@{message.content}"
                    android:textSize="@dimen/text_medium"
                    tools:text="The content of the message"/>

                <ImageView
                    android:id="@+id/chat_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:paddingEnd="3dp"
                    android:paddingStart="3dp"
                    android:visibility="@{hasPicture ? View.VISIBLE : View.GONE}"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>