<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="48dp"
            android:height="48dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:name="circle"
                android:pathData="M 1 12 C 1 18.075 5.925 23 12 23 C 18.075 23 23 18.075 23 12 C 23 5.925 18.075 1 12 1 C 5.925 1 1 5.925 1 12"
                android:strokeColor="#FFFFFF"
                android:strokeWidth="1"/>
            <path
                android:name="left"
                android:pathData="M 6 6 L 18 18 Z"
                android:strokeColor="#FFFFFF"
                android:strokeWidth="1"
                android:trimPathStart="1"
                android:strokeLineCap="round"
                android:strokeLineJoin="round"/>
            <path
                android:name="right"
                android:pathData="M 6 18 L 18 6 Z"
                android:strokeColor="#FFFFFF"
                android:strokeWidth="1"
                android:trimPathStart="1"
                android:strokeLineCap="round"
                android:strokeLineJoin="round"/>
        </vector>
    </aapt:attr>
    <target android:name="circle">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="trimPathEnd"
                android:duration="600"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="left">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="trimPathStart"
                android:startOffset="29"
                android:duration="571"
                android:valueFrom="1"
                android:valueTo="0"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="right">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="trimPathStart"
                android:startOffset="29"
                android:duration="571"
                android:valueFrom="1"
                android:valueTo="0"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>
